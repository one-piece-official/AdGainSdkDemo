<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".WeChatMiniProgramDemoActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信小程序示例"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信开放平台AppID"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_app_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入您的微信开放平台AppID"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小程序原始ID (gh_开头)"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_miniprogram_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入小程序原始ID，以gh_开头"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小程序页面路径 (可选)"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_miniprogram_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入小程序页面路径，例如：pages/index/index"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小程序版本类型"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rg_miniprogram_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rb_miniprogram_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正式版"
            android:checked="true"
            android:layout_marginEnd="16dp" />

        <RadioButton
            android:id="@+id/rb_miniprogram_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试版"
            android:layout_marginEnd="16dp" />

        <RadioButton
            android:id="@+id/rb_miniprogram_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预览版" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_launch_miniprogram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动微信小程序"
        android:textAllCaps="false"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="使用说明:\n1. 输入您在微信开放平台申请的AppID\n2. 输入要打开的小程序原始ID (以gh_开头)\n3. 可选择输入要打开的页面路径\n4. 选择小程序版本类型\n5. 点击按钮启动小程序"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

</LinearLayout> 