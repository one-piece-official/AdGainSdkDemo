<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 视频 广告 container -->
    <FrameLayout
        android:id="@+id/ad_video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#000000"
        />

    <!-- 大图 -->
    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitCenter"
        />

    <FrameLayout
        android:id="@+id/shake_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/ad_channel_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_ad_logo_default"
        />

    <!-- 广告信息View -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ad_channel_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="10dp"
        android:background="#eeeeee"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ad_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_icon" />

        <TextView
            android:id="@+id/ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/ad_logo"
            app:layout_constraintTop_toTopOf="@id/ad_logo"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:textColor="#333333"
            tools:text="广告标题"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/ad_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="广告描述内容, 广告描述内容, 广告描述内容, 广告描述内容"
            app:layout_constraintTop_toBottomOf="@id/ad_title"
            app:layout_constraintLeft_toLeftOf="@id/ad_title"
            app:layout_constraintBottom_toBottomOf="@id/ad_logo"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#999999"
            />
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ad_logo,ad_desc,ad_title"
            />

        <Button
            android:id="@+id/ad_cta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            tools:text="点击查看"
            android:background="@drawable/background_green"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#eeeeee"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>